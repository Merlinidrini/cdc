<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CdCollectionWeb</display-name>
  <welcome-file-list>
    <welcome-file>HomeResponse.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AlbumsServlet</servlet-name>
    <servlet-class>AlbumsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AlbumViewServlet</servlet-name>
    <servlet-class>AlbumViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ScanAlbumsServlet</servlet-name>
    <servlet-class>ScanAlbumsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AboutUsServlet</servlet-name>
    <servlet-class>AboutUsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ContactServlet</servlet-name>
    <servlet-class>ContactServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/Home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AlbumsServlet</servlet-name>
    <url-pattern>/Albums</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AlbumViewServlet</servlet-name>
    <url-pattern>/AlbumView</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ScanAlbumsServlet</servlet-name>
    <url-pattern>/ScanAlbums</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AboutUsServlet</servlet-name>
    <url-pattern>/AboutUs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContactServlet</servlet-name>
    <url-pattern>/Contact</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>SQLException</exception-type>
    <location>/500.jsp</location>
  </error-page>
</web-app>